@{
}

@model MVCToDoList.Web.Models.Entities.TaskItem

<h1>Edit Task</h1>

@if (Model is null){
    <p>No Task was found with this id!</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" id="title" asp-for="Title"/>
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" id="description" rows="3" asp-for="Description"></textarea>
        </div>

        <div class="mt-3">
            <label for="dueDate" class="form-label">Due Date (Optional)</label>
            <input type="date" id="dueDate" class="form-control" asp-for="DueDate" />
        </div>

        <div class="mt-3">
            <label class="form-check-label">
                <input type="checkbox" class="form-check-input" id="isCompleted" asp-for="IsCompleted" />
                Is Completed
            </label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
    
}